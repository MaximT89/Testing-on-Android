<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.secondworld.buenas.testingonandroid.ui.screens.main_screen.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_questionsFragment"
            app:destination="@id/questionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/questionsFragment"
        android:name="com.secondworld.buenas.testingonandroid.ui.screens.questions_screen.QuestionsFragment"
        android:label="fragment_questions"
        tools:layout="@layout/fragment_questions">
        <action
            android:id="@+id/action_questionsFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_questionsFragment_to_resultFragment"
            app:popUpTo="@id/questionsFragment"
            app:popUpToInclusive="true"
            app:destination="@id/resultFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.secondworld.buenas.testingonandroid.ui.screens.result_screen.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result">

        <action
            android:id="@+id/action_resultFragment_to_mainFragment"
             app:destination="@id/mainFragment" />
    </fragment>
</navigation>